<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ferot.webrtccordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WebRTC Cordova</name>
    <description>
        Cordova crossplatform application to test WebRTC API on mobile device
    </description>
    <author email="antoine.ferot@gmail.com">
        Antoine Ferot
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-manifest/uses-permission/@android:name" value="android.permission.CAMERA" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="browser" spec="~4.0.0" />
    <plugin name="cordova-custom-config" spec="~1.2.6" />
</widget>
